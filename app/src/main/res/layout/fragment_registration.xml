<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.framgia.hrm.activity.RegistrationFragment">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="60dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/phoneLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_phone"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/birth_place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/dept_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_birth_place"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/calendar_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_date"
                android:inputType="date" />
            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/calendar_id"
                android:contentDescription="strsing/electdate"
                android:cropToPadding="true"
                android:onClick="onViewCreated"
                android:src="@drawable/calendar" />
            <TextView
                android:id="@+id/activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/imageButton1"
                android:layout_marginRight="60dp"
                android:layout_marginTop="20dp"
                android:text="@string/select" />
            <Spinner
                android:id="@+id/Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/imageButton1"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/activity"
                android:entries="@array/activity_array"
                android:popupBackground="#03a9f4"/>
            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/Spinner"
                android:layout_marginRight="125dp"
                android:layout_marginTop="20dp"
                android:text="@string/select_dept" />
            <Spinner
                android:id="@+id/Spinner_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/Spinner"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/department"
                android:entries="@array/department_array"
                android:popupBackground="#03a9f4"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/Spinner_dept"
                android:layout_marginRight="160dp"
                android:layout_marginTop="20dp"
                android:text="@string/select_status" />
            <Spinner
                android:id="@+id/Spinner_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/Spinner_dept"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/status"
                android:entries="@array/status_array"
                android:popupBackground="#03a9f4"/>
            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/Spinner_status"
                android:layout_marginRight="140dp"
                android:layout_marginTop="20dp"
                android:text="@string/select_position" />
            <Spinner
                android:id="@+id/Spinner_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/Spinner_status"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/position"
                android:entries="@array/position_array"
                android:popupBackground="#03a9f4"/>
        </RelativeLayout>
        <Button
            android:id="@+id/add_usr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:text="@string/btn_add_usr"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
