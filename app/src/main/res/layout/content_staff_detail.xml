<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.framgia.hrm.activity.StaffDetail"
                tools:showIn="@layout/activity_staff_detail">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/activity_staff_detail_text_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_staff_detail_text_margin_top"
                android:text="@string/activity_staff_detail_text_label_name"
                android:textAllCaps="true"
                android:textSize="@dimen/content_staff_detail_text_size_2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_staff_detail_text_label_name"
                android:paddingLeft="@dimen/content_staff_detail_text_padding_left"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_staff_detail_text_size"/>

            <TextView
                android:id="@+id/activity_staff_detail_text_label_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="@dimen/content_staff_detail_text_margin_top"
                android:text="@string/activity_staff_detail_text_label_dob"
                android:textAllCaps="true"
                android:textSize="@dimen/content_staff_detail_text_size_2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/date_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_staff_detail_text_label_dob"
                android:paddingLeft="@dimen/content_staff_detail_text_padding_left"
                android:text="date of birth"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_staff_detail_text_size"/>

            <TextView
                android:id="@+id/activity_staff_detail_text_label_birthplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_birth"
                android:layout_marginTop="@dimen/content_staff_detail_text_margin_top"
                android:text="@string/activity_staff_detail_text_label_birthplace"
                android:textAllCaps="true"
                android:textSize="@dimen/content_staff_detail_text_size_2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/birth_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_staff_detail_text_label_birthplace"
                android:paddingLeft="@dimen/content_staff_detail_text_padding_left"
                android:text="birth place"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_staff_detail_text_size"/>

            <TextView
                android:id="@+id/activity_staff_detail_text_label_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/birth_place"
                android:layout_marginTop="@dimen/content_staff_detail_text_margin_top"
                android:text="@string/activity_staff_detail_text_label_phone"
                android:textAllCaps="true"
                android:textSize="@dimen/content_staff_detail_text_size_2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_staff_detail_text_label_phone"
                android:paddingLeft="@dimen/content_staff_detail_text_padding_left"
                android:text="phone number"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_staff_detail_text_size"/>

            <TextView
                android:id="@+id/activity_staff_detail_text_label_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_number"
                android:layout_marginTop="@dimen/content_staff_detail_text_margin_top"
                android:text="@string/activity_staff_detail_text_label_department"
                android:textAllCaps="true"
                android:textSize="@dimen/content_staff_detail_text_size_2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_staff_detail_text_label_dept"
                android:paddingLeft="@dimen/content_staff_detail_text_padding_left"
                android:text="Department"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_staff_detail_text_size"/>

            <TextView
                android:id="@+id/activity_staff_detail_text_label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_dept"
                android:layout_marginTop="@dimen/content_staff_detail_text_margin_top"
                android:text="@string/activity_staff_detail_text_label_status"
                android:textAllCaps="true"
                android:textSize="@dimen/content_staff_detail_text_size_2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_staff_detail_text_label_status"
                android:paddingLeft="@dimen/content_staff_detail_text_padding_left"
                android:text="date of birth"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_staff_detail_text_size"/>

            <TextView
                android:id="@+id/activity_staff_detail_text_label_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_status"
                android:layout_marginTop="@dimen/content_staff_detail_text_margin_top"
                android:text="@string/activity_staff_detail_text_label_activity"
                android:textAllCaps="true"
                android:textSize="@dimen/content_staff_detail_text_size_2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_staff_detail_text_label_act"
                android:paddingLeft="@dimen/content_staff_detail_text_padding_left"
                android:text="birth place"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_staff_detail_text_size"/>

            <TextView
                android:id="@+id/activity_staff_detail_text_label_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_act"
                android:layout_marginTop="@dimen/content_staff_detail_text_margin_top"
                android:text="@string/activity_staff_detail_text_label_position"
                android:textAllCaps="true"
                android:textSize="@dimen/content_staff_detail_text_size_2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_staff_detail_text_label_pos"
                android:paddingLeft="@dimen/content_staff_detail_text_padding_left"
                android:text="position"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_staff_detail_text_size"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
