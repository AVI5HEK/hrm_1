<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_staff_detail"
    tools:context="com.framgia.hrm.activity.StaffDetail">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="@dimen/content_staff_detail_text_size"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/date_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="date of birth"
        android:textSize="@dimen/content_staff_detail_text_size"/>
    <TextView
        android:id="@+id/birth_place"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/date_birth"
        android:text="birth place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_staff_detail_text_size" />
    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birth_place"
        android:text="phone number"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/content_staff_detail_text_size"/>
    <TextView
        android:id="@+id/text_dept"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        android:layout_below="@id/phone_number"
        android:textSize="@dimen/content_staff_detail_text_size"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_dept"
        android:text="date of birth"
        android:textSize="@dimen/content_staff_detail_text_size"/>
    <TextView
        android:id="@+id/text_act"
        android:layout_marginTop="5dp"
        android:layout_below="@id/text_status"
        android:text="birth place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_staff_detail_text_size"/>
    <TextView
        android:id="@+id/text_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_act"
        android:text="position"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/content_staff_detail_text_size"/>

</RelativeLayout>
