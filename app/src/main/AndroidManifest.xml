<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.framgia.hrm" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme.Base" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity.AddstaffActivity"
            android:label="@string/title_activity_addstaff"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name=".activity.StaffDetailActivity"
            android:label="@string/title_activity_staff_detail"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name=".activity.StaffListActivity"
            android:label="@string/title_activity_staff_list"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/MyMaterialTheme">
        </activity>
    </application>

</manifest>
